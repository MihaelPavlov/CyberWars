@page
@model LoginModel
@{ Layout = null;}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Base/Login.css" />
    <title>Login</title>
</head>
<body>
    <form method="post">
        <div class="container">
            <h1>Login</h1>
            <p>Please fill in this form to login in your account.</p>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <label asp-for="Input.Username"><b>Username</b></label>
            <input type="text"
                   placeholder="Enter Username"
                   asp-for="Input.Username"
                   id="username"
                   required />
            <span asp-validation-for="Input.Username" class="text-danger"></span>

            <label asp-for="Input.Password"><b>Password</b></label>
            <input type="password"
                   placeholder="Enter Password"
                   asp-for="Input.Password"
                   id="password"
                   required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div><button type="submit" class="registerbtn">Login</button></div>
        </div>
        <div class="container signin">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./RegisterChoose" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
        <div class="container signin">
            <p>Dont't have an account? <a href="/Identity/Account/RegisterChoose">Register</a>.</p>
        </div>
    </form>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
