@page
@{
    Layout = null;
}
@model RegisterModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Base/Register.css" />
    <title>Register</title>
</head>
<body>
    <form method="post">
        <div asp-validation-summary="All" class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr />

            <label asp-for="Input.Username"><b>Username</b></label>
            <input type="text"
                   placeholder="Enter Username"
                   asp-for="Input.Username"
                   id="username"
                   required />

            <label asp-for="Input.Email"><b>Email</b></label>
            <input type="text"
                   placeholder="Enter Email"
                   asp-for="Input.Email"
                   id="email"
                   required />

            <label asp-for="Input.Password"><b>Password</b></label>
            <input type="password"
                   placeholder="Enter Password"
                   asp-for="Input.Password"
                   id="password"
                   required />

            <label asp-for="Input.ConfirmPassword"><b>Confirm Password</b></label>
            <input type="password"
                   placeholder="Confirm Password"
                   asp-for="Input.ConfirmPassword"
                   id="confirmPassword"
                   required />

            <h1>Select Avatar:</h1>
            <div id="radios">
                <label class="labelAvatar"
                       id="label1"
                       for="input1"
                       style="background-image: url(/images/Base/01.@(Model.Type + ".png"))"></label>
                <input class="inputAvatar" id="input1" asp-for="Input.Avatar" type="radio" value="01.@(Model.Type + ".png")" />

                <label class="labelAvatar"
                       id="label1"
                       for="input2"
                       style="background-image: url(/images/Base/02.@(Model.Type + ".png"))"></label>
                <input class="inputAvatar" id="input2" asp-for="Input.Avatar" type="radio" value="02.@(Model.Type + ".png")" />
                <label class="labelAvatar"
                       id="label1"
                       for="input3"
                       style="background-image: url(/images/Base/03.@(Model.Type + ".png"))"></label>
                <input class="inputAvatar" id="input3" asp-for="Input.Avatar" type="radio" value="03.@(Model.Type + ".png")" />
                <span id="slider"></span>
            </div>

            <div><button type="submit" class="registerbtn">Register</button></div>
        </div>

        <div class="container signin">
            <p>Already have an account? <a href="/Identity/Account/Login">Sign in</a>.</p>
        </div>
    </form>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
